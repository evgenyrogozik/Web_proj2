extends layout
block content
  body(onload='footer_info();')
    .page-wrap
      header.header
        .header_inner
          .navigation
            ul.navigation_inner
              li
                a(href='/') Home
              li
                a(href='game') Play Game
              li
                a(href='references.html') References used
              li
                a(href='howto.html') How To Play
              li
                a(href='about.html') About
              li
                a(href='register') Register
              li#testlog(style='pointer-events: none;')
                a.active(href='login') Login
              li
                a(href='comments') Feedbacks
      .main-content
        .content
          h1 Login
          form#formUserLogin(name="userlogin",method="post",action="/userlogin" style='width:260px; margin:0 auto')
            |         User Name:
            br
            input(type='text', name='user_name')
            br
            |         Password:
            br
            input(type='password', name='pass')
            br
            input(type='submit', value='Submit')
      footer#fixed
        .footer_title
          h4  University of Western Australia
          h4#last_modified
          h4 Last visited: dd/mm/yyyy
